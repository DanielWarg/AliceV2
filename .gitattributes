# Set default behavior to automatically normalize line endings
* text=auto eol=lf

# Explicitly declare text files you want to always be normalized and converted
# to native line endings on checkout
*.md text diff=markdown
*.txt text
*.py text linguist-language=Python
*.ts text linguist-language=TypeScript
*.tsx text linguist-language=TypeScript
*.js text linguist-language=JavaScript
*.jsx text linguist-language=JavaScript
*.json text
*.yml text
*.yaml text
*.toml text
*.cfg text
*.ini text
*.sh text eol=lf
*.bash text eol=lf
*.zsh text eol=lf
*.fish text eol=lf

# Declare files that will always have CRLF line endings on checkout
*.bat text eol=crlf
*.cmd text eol=crlf

# Denote all files that are truly binary and should not be modified
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.mov binary
*.mp4 binary
*.mp3 binary
*.flv binary
*.fla binary
*.swf binary
*.gz binary
*.zip binary
*.7z binary
*.ttf binary
*.eot binary
*.woff binary
*.woff2 binary
*.pyc binary
*.pyo binary
*.pyd binary
*.so binary
*.dll binary
*.dylib binary
*.exe binary
*.bin binary
*.onnx binary
*.safetensors binary
*.gguf binary
*.ggml binary

# Python specific
*.py linguist-language=Python
*.pyx linguist-language=Python
*.pxd linguist-language=Python

# TypeScript/JavaScript specific
*.ts linguist-language=TypeScript
*.tsx linguist-language=TypeScript
*.js linguist-language=JavaScript
*.jsx linguist-language=JavaScript
*.mjs linguist-language=JavaScript

# Shell scripts
*.sh linguist-language=Shell
*.bash linguist-language=Shell
*.zsh linguist-language=Shell
*.fish linguist-language=Shell

# Docker
Dockerfile linguist-language=Dockerfile
*.dockerfile linguist-language=Dockerfile

# Markdown
*.md linguist-language=Markdown

# YAML
*.yml linguist-language=YAML
*.yaml linguist-language=YAML

# JSON
*.json linguist-language=JSON

# TOML
*.toml linguist-language=TOML
pyproject.toml linguist-language=TOML
Cargo.toml linguist-language=TOML

# Config files
*.cfg linguist-language=INI
*.ini linguist-language=INI
*.conf linguist-language=INI
