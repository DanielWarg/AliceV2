# Alice v2 Orchestrator Environment Configuration
# Copy this file to .env and adjust values

# API Configuration
API_VERSION=1
API_TITLE=Alice v2 Orchestrator
API_DESCRIPTION=LLM routing and API gateway for Alice AI Assistant

# Server Configuration
HOST=127.0.0.1
PORT=8000
DEBUG=false

# Guardian Configuration
GUARDIAN_URL=http://localhost:8787
GUARDIAN_TIMEOUT=0.5

# Rate Limiting
RATE_LIMIT_ENABLED=true
DEFAULT_RATE_LIMIT=100
RATE_LIMIT_WINDOW=60

# Authentication
AUTH_ENABLED=true
API_KEYS=["test-key-123", "system-key-456"]

# Metrics & Monitoring
PROMETHEUS_ENABLED=true
METRICS_ENDPOINT=/metrics

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# PII & Consent
PII_MASKING_ENABLED=true
DEFAULT_CONSENT_LEVEL=bronze

# Idempotency
IDEMPOTENCY_ENABLED=true
IDEMPOTENCY_TTL=60

# CORS
CORS_ORIGINS=["http://localhost:3000"]
CORS_CREDENTIALS=true

# Telemetry
TELEMETRY_ENABLED=true
TELEMETRY_DIR=/data/telemetry
